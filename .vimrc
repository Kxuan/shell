set nocompatible

set nu
colorscheme eldar
set mouse=a
set autoindent
set shiftwidth=4
set softtabstop=4
set tabstop=4
set smarttab
set expandtab
syntax on

set foldmethod=syntax
set nofoldenable
set ruler
set noswapfile
set fileencodings=utf-8,gb18030,gbk
set fileformats=unix,dos
set wrap "不自动换行
set hlsearch "高亮显示结果
set incsearch "在输入要搜索的文字时，vim会实时匹配

