source /usr/lib/python3.11/site-packages/powerline/bindings/vim/plugin/powerline.vim
set laststatus=2
set showtabline=2
set noshowmode

set nocompatible

set nu
set mouse=a
set autoindent
set shiftwidth=4
set softtabstop=4
set tabstop=4
set smarttab
set expandtab
syntax on

set foldmethod=syntax
set nofoldenable
set ruler
set fileencodings=utf-8,gb18030,gbk
set fileformats=unix,dos
set wrap
set hlsearch
set incsearch

" remove '=' from filename to support complete file arguments
set isfname-==
